<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Điện thoại rẻ Long An</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
    <link rel=" stylesheet" href="~/Content/Style.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <link href="~/Content/style.css" rel="stylesheet" />
    @using MTN.Models;
</head>

<body>

    @{
        var u = Session["use"] as MTN.Models.Nguoidung;
    }

    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="top_header col-md-12">
            <div class="row">

                <div class="col-sm-6 " style="font-size:large">THEGIOISO</div>
                <div class="col-sm-3 " style="padding-left:250px">
                    @Html.Action("GioHangPartial", "GioHang", new { @class = "giohang" })
                </div>

                @{
                    if (u != null)
                    {
                        <div class="text-right: 0;">
                            Xin chào : @u.Email
                            &nbsp;
                            <a style="color:red" href="/Nguoidung/DangXuat"> ĐĂNG XUẤT</a>

                        </div>
                    }
                    else
                    {
                        <div class="text-right: 0;">
                            <a style="color:white" href="@Url.Action("Dangky","Nguoidung")"> ĐĂNG KÝ</a>
                            &nbsp;
                            <a style="color:white" href="@Url.Action("Dangnhap","Nguoidung")">ĐĂNG NHẬP</a>
                        </div>
                    }
                }
            </div>

        </div>
        <div class="container">

            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <img class="navbar-brand" src="~/HinhAnhMTN/logohieu-111.png" width="40" height="50" style="padding:0" />
                @Html.ActionLink("THẾ GIỚI SỐ ", "Index", "PhoneStore", new { area = "" }, new { @class = "navbar-brand" })
                <form class="form-inline" style="float:left">
                    <input class="form-control mr-sm-2" type="search" placeholder="Tìm kiếm sản phẩm..." aria-label="Search">
                    <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Tìm Kiếm</button>
                </form>

            </div>

            <div class="navbar-collapse collapse">

                <ul class="nav navbar-nav">
                    <li>
                        <a href="@Url.Action("Phone","DienThoai")"><i class="glyphicon glyphicon-phone "></i>ĐIỆN THOẠI</a>
                    </li>
                    <li>
                        <a href="@Url.Action("Laptop","DienThoai")"><i class="glyphicon glyphicon-phone "></i>LAPTOP</a>
                    </li>
                    <li>
                        <a href="@Url.Action("PhuKienpartial","Phukien")"><i class="glyphicon glyphicon-headphones "></i>PHỤ KIỆN</a>
                    </li>
                    <li>
                        <a href="@Url.Action("lienhead","Lienhe")"><i class="glyphicon glyphicon-headphones "></i>LIÊN HỆ</a>
                    </li>

                    <li>
                        <a href="~/Views/Home/About.cshtml" title="THONGTIN">
                            <span><i class=" glyphicon glyphicon-edit "></i></span>
                            <span>THÔNG TIN</span>

                        </a>
                    </li>
                </ul>
            </div>

        </div>
    </div>
    <br>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <div>
            <img class="img-responsive" src="~/HinhAnhMTN/ban2.jpg" />
        </div>
        <br />
    </div>
    <footer class="bg-info" style="padding-left:50px">
        <div class="row">
            <div class="col-md-3 col-sm-6">
                <h2>Bảo hành</h2>
                <span>Chính sách mua hàng</span>
                <br />
                <span>Chính sách bảo hành</span>
                <br />
                <span>Trung tâm bảo hành</span>
                <br />
                <span>Tra cứu bảo hành</span>
            </div>
            <div class="col-md-3 col-sm-6">
                <h2>Liên kết</h2>
                <span>Tin tức Mobile</span>
                <br />
                <span>Lập trình Web</span>
                <br />
                <span>Minhphamooo</span>
                <br />
                <span>Dân trí</span>
            </div>
            <div class="col-md-3 col-sm-6">
                <h2>Thông tin</h2>
                <span>Về chúng tôi</span>
                <br />
                <span>Liên hệ</span>
                <br />
                <span>Góp ý</span>
                <br />
                <span>Tra cứu</span>
            </div>
            <div class="col-md-3 col-sm-6">
                <h2>Theo dõi</h2>
                <p><a href="https://www.youtube.com/channel/UCTYLiWFZy8xtPwxFwX9rV7Q">Kênh youtube</a></p>
                <p><a href="http://daotao.hutech.edu.vn/default.aspx?page=gioithieu">Fanpage</a></p>
                <p><a href="https://shopee.vn/?__hybrid_pc__=1&stm_referrer=https%3A%2F%2Fvn.search.yahoo.com%2F">Shopee</a></p>
                <p><a href="https://www.facebook.com/groups/682528162083716">Group</a></p>
            </div>
        </div>
        <hr />
        <center> <p class="bg-primary">&copy; @DateTime.Now.Year - THẾ GIỚI SỐ </p></center>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
